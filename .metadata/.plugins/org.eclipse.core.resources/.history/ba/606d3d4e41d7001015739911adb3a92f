package org.jsp;

public class Test {
	public static void main(String[] args) {
		String s="hello";
		String first="";
		String last="";
		
		int f=0;
		int l=s.length()-1;
		
		while (f<=l) {
			if (f==l) {
				first = s.charAt(f)+first;
			}else {
				first = s.charAt(f)+first;
				last =last + s.charAt(l);
			}
		}
		System.out.println();
	}
}
